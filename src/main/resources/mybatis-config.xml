<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.8//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias alias="Student" type="co.shu.domain.Student" />
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManger type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver"   value="com.mysql.jdbc.Driver" />
                <property name="url"      value="jdbc:mysql://192.168.0.49:3306/test" />
                <property name="username" value="newuser" />
                <property name="password" value="password" />
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="co/shu/mappers/StudentMapper.xml" />
    </mappers>
</configuration>
